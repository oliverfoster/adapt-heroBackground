{{#if _media.mp3}}
  <audio src="{{_media.mp3}}" type="audio/mp3" style="width: 100%; height: 100%;"/>
{{else}}
  {{#if _media.ogg}}
    <audio src="{{_media.ogg}}" type="audio/ogg" style="width: 100%; height: 100%;"/>
  {{else}}
    <video preload="none"  poster="{{_media.poster}}" width="960" height="540" style="width:100%; height:100%;" controls="none">
      {{#if_value_equals speed "fast"}}
      <source src="{{_media.mp4}}" type="video/mp4"/>
      {{else}}
      <source src="{{_media.mp4}}.low.mp4" type="video/mp4"/>
      {{/if_value_equals}}
      
      {{#if _useClosedCaptions}}
          {{#each _media.cc}}
              <track kind="subtitles" src="{{src}}" type="text/vtt" srclang="{{srclang}}" />
          {{/each}}
      {{/if}}
    </video>
  {{/if}}
{{/if}} 
